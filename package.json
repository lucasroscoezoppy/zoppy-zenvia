{
    "name": "@ZoppyTech/zenvia",
    "version": "1.0.2",
    "description": "Zoppy Zenvia",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "publish:patch": "npm version patch && npm run build && npm publish",
        "publish:minor": "npm version minor && npm run build && npm publish",
        "publish:major": "npm version major && npm run build && npm publish",
        "test": "jest",
        "test:cov": "npx jest --coverage",
        "prepare": "husky install",
        "lint": "pretty-quick --staged && lint-staged",
        "build": "rm -rf dist && tsc"
    },
    "files": [
        "/dist"
    ],
    "devDependencies": {
        "@babel/core": "^7.19.6",
        "@babel/types": "^7.20.0",
        "@types/jest": "^29.2.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard-with-typescript": "^23.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.4.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.1.1",
        "husky": "^8.0.1",
        "jest": "^29.2.2",
        "lint-staged": "^13.0.3",
        "lodash": "^4.17.21",
        "prettier": "^2.7.1",
        "pretty-quick": "^3.1.3",
        "typescript": "^4.8.4",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "ts-jest": "^29.0.5",
        "@ZoppyTech/test-utils": "~1.2.4"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ZoppyTech/zoppy-library-templates"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/ZoppyTech"
    },
    "peerDependencies": {
        "axios": "^0.27.2",
        "uuid": "^8.3.2",
        "@ZoppyTech/utilities": "~2.1.7",
        "@ZoppyTech/models": "~4.3.1",
        "@ZoppyTech/shared": "~3.0.1"
    },
    "lint-staged": {
        "*.{ts,js}": "eslint --cache --fix"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^src/(.*)$": "<rootDir>/$1"
        }
    }
}
